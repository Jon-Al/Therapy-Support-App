<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container_view"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SymptomFragment">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Choose date:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/date1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:cursorVisible="true"
            android:focusable="false"
            android:focusableInTouchMode="false">

        </EditText>

        <EditText
            android:id="@+id/idEdtSymptomName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter the name of symptom" />


        <EditText
            android:id="@+id/idEdtSymptomDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter a description about your symptom" />

        <EditText
            android:id="@+id/idEdtOldSymptomDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter the symptom name you want deleted or updated" />


        <Button
            android:id="@+id/idBtnAddSymptom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Add Symptom Entry"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/idBtnReadSymptom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Read All SymptomEntries"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/idBtnDeleteSymptom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:text="Delete SymptomEntries" />

        <Button
            android:id="@+id/idBtnUpdateSymptom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textAllCaps="false"
            android:text="Update Symptom Entry" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The fields are given as: name; description; date."
            android:textStyle="bold" />

        <ListView
            android:id="@+id/symptomlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</FrameLayout>